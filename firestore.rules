rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    // Subscribers collection - allow public creation and individual lookup
    match /subscribers/{email} {
      // Anyone can create a new subscriber or check if they are already subscribed
      allow create, get: if true;
      
      // Only admins can list all subscribers or delete them
      allow list, delete: if isAdmin();
      
      // No one can update (prevent tampering)
      allow update: if false;
    }
    
    // Deals collection - public read, admin write
    match /deals/{dealId} {
      // Anyone can read deals
      allow read: if true;
      
      // Only admins can create, update, or delete deals
      allow create, update, delete: if isAdmin();
    }

    // Inquiries/Leads collection - public create, admin read/delete
    match /inquiries/{inquiryId} {
      allow create: if true;
      allow read, delete: if isAdmin();
    }

    
    // Mail collection - admin-only read/write, plus restricted public create for notifications
    match /mail/{mailId} {
      allow read, update, delete: if isAdmin();
      allow create: if isAdmin() || (
        request.resource.data.to == 'kuriakosepalex93@gmail.com' && 
        request.resource.data.message.subject.matches('.*Payment.*')
      );
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Payments collection - public can create, only admins can read/update
    match /payments/{paymentId} {
      allow create: if true;  // Anyone can submit payment
      allow read, update: if isAdmin();  // Only admins can view and verify
      allow delete: if false;  // No one can delete payments
    }
  }
}
